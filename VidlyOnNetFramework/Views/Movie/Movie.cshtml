@model VidlyOnNetFramework.Models.MovieViewModel
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@if (Model.MovieList.Count == 0)
{
    <text>Sorry! No movies available now. </text>
}
else
{

    <table class="table table-­bordered table-hover">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.MovieList)
            {
                <tr><th scope="row">@Html.ActionLink(movie.Name, String.Format("Details/{0}", movie.ID), "Movie")</th></tr>
            }
        </tbody>
    </table>
}

