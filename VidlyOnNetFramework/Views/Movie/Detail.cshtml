@model VidlyOnNetFramework.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.GenreType.TypeName</li>
    <li>Release Date: @Model.ReleaseDate.Value.ToString("D")</li>
    <li>Date Added: @Model.DateAdded.Value.ToString("D")</li>
    <li>Number in Stock: @Model.NumInStock</li>
</ul>

